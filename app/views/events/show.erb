
<pre><a href="/">Home</a>     <a href="/events">All Events</a>     <a href="/organizers">Event Organizers</a>     <a href="/logout">Organizer Logout</a></pre>

<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>
<br>

<h2>Event: <%= @event.name %></h2>

<p>Date: <%= @event.date %></p>

<p>Start Time: <%= @event.start_time %></p>

<p>Contact Information: <%= @event.contact_email %></p>

<p>Website: <a href="<%= @event.website_url %>"><%= @event.website_url %></a></p>

<p><%= @event.message %></p>

<h3>List of Races in Event</h3>

<ul>
	<% @races.each do |race| %>
		<li><%= race %></li>
	<% end %>
</ul>

<br>
<% if logged_in? && current_organizer[:id] == session[:organizer_id] %>
    <a href="/events/<%= @event.id %>/edit">Edit Event</a><br><br>

	<form action="/events/<%= @event.id %>" method="POST" >
		<input type="hidden" id="hidden" name="_method" value="delete" >
		<input type="submit" value="Delete Event">
	</form>
<% end %>
